{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "rootDir": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "src/config/db.config.ts"],
  "exclude": ["node_modules", "**/*.d.ts", "**/*.spec.ts"]
}
